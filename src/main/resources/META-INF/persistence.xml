<persistence
    xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="Ivy" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>br.com.ivy.entity.Target</class>
		<class>br.com.ivy.entity.Contact</class>
		<class>br.com.ivy.entity.Url</class>
	
		<properties>
			<property name="hibernate.connection.datasource"        value="java:comp/env/jdbc/ivy" />
			<property name="hibernate.dialect"                      value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.cache.region.factory_class"   value="org.hibernate.cache.ehcache.EhCacheRegionFactory" />
			<property name="hibernate.cache.use_second_level_cache" value="true" />
			<property name="hibernate.cache.use_query_cache"        value="true" />
			<property name="hibernate.hbm2ddl.auto"                 value="update" />
			<property name="hibernate.search.default.indexBase"     value="/Users/Anonymous/Documents/ivy/index"/>
		</properties>
	</persistence-unit>
</persistence>
